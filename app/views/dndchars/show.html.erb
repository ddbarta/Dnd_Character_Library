  <div class="left-side">
    <p class="level-item">
      <strong class="title is-6 is-italic">Notes & Description</strong>
    </p>
  </div>
  <div class="container">
    <div class="card">
      <div class="card-content">
        <div class="columns">
          <div class="column is-one-sixth">Description: <%= @dndchar.chardescription %></div>
          <div class="column">Notes: <%= @dndchar.charnotes %></div>
        </div>
      </div>
    </div>
  </div>
</section>