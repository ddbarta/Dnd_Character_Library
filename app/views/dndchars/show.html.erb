    <div class="card">
      <div class="card-content">
        <div class="columns">
          <div class="column is-one-sixth">Acrobatics: <%= @dndchar.characro %></div>
          <div class="column">Animal Handling: <%= @dndchar.charanimal %></div>
          <div class="column">Arcana: <%= @dndchar.chararcana %></div>
