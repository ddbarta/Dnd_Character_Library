<% content_for :page_title, "Create a new character" %>

<div class="section">
  <%= simple_form_for @dndchar do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :charname, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :charrace, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :charclass, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :charlevel, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>

    <%= f.button :submit, 'Create new character', class: "button is-primary" %>
  <% end %>
</div>